@{
    var productos = ViewBag.Productos;


    <h1>Listado de Productos</h1>

    <table border="1" cellpadding="8" style="border-collapse: collapse; font-size: 18px;">
        <tr>
            <th>Producto</th>
            <th>Precio (€)</th>
        </tr>

        @foreach (var p in productos)
        {
            string estilo = p.Precio > 50 ? "font-weight:bold; color:darkred;" : "";

            <tr style="@estilo">
                <td>@p.Nombre</td>
                <td>@p.Precio</td>
            </tr>
        }
    </table>
}
