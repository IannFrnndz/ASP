@{
    @model LoginModel

    <h2>Inicio de Sesión</h2>

    @if (ViewBag.Mensaje != null)
    {
        <p style="color: red; font-weight: bold;">@ViewBag.Mensaje</p>
    }

    <form asp-controller="Cuenta" asp-action="Login" method="post">
        <div>
            <label asp-for="Usuario"></label>
            <input asp-for="Usuario" />
        </div>

        <div>
            <label asp-for="Contrasena"></label>
            <input asp-for="Contrasena" type="password" />
        </div>

        <button type="submit">Iniciar Sesión</button>
    </form>

}
